#!/bin/sh

usage(){
    echo "usage: git-mktopic <topic_name>"
    echo
    echo "    You can make new branch named 'pro_YYYYMMDD_<topic_name>'"
    echo
}

cmd_default(){
    if [ -z "$1" ]; then
        usage
        exit 1
    fi

    git checkout -b feature/$1
}

cmd_help(){
    usage
}

main(){
    ACTION="default"
    while getopts h opt
    do
        case ${opt} in
            h)
                ACTION="help";;
        esac
    done

    cmd_${ACTION} "$@"
}

main "$@"